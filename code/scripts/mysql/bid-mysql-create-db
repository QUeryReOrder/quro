#!/bin/bash
MYSQL=mysql
DB_HOST=localhost
DB_NAME=bid
DB_USER=root

MYSQL_ARGS="-u $DB_USER"
MYSQL="$MYSQL $MYSQL_ARGS"

#echo "$MYSQL -e \"drop database if exists $DB_NAME\" "
$MYSQL -e "drop database if exists $DB_NAME" 
#echo "$MYSQL -e \"create database $DB_NAME\" "
$MYSQL -e "create database $DB_NAME"


