#!/bin/bash

MYSQL=mysql
DB_NAME=bid

${MYSQL} ${DB_NAME} -e "
CREATE TABLE USER (
	USER_ID			BIGINT NOT NULL,
	BID					BIGINT NOT NULL,
	K						BIGINT NOT NULL,
	NAME				VARCHAR(64) NOT NULL,
	ADDRESS 		VARCHAR(256) NOT NULL,
	OTHER				VARCHAR(32) NOT NULL,
	PRIMARY KEY (USER_ID)
);
"

${MYSQL} ${DB_NAME} -e "
CREATE TABLE BIDREC (
	USER_ID 		BIGINT NOT NULL,
	BID					BIGINT NOT NULL,
	PID					BIGINT NOT NULL,
	PRICE				FLOAT,
	DESCRIPTION	VARCHAR(128),
	PRIMARY KEY (USER_ID, BID)
);
"

${MYSQL} ${DB_NAME} -e "
CREATE TABLE BIDITEM (
	PID					BIGINT NOT NULL,
	FEATURE			BIGINT NOT NULL,
	MAX_PRICE   FLOAT,
	DESCRIPTION VARCHAR(1024),
	PRIMARY KEY (PID)
);
"
